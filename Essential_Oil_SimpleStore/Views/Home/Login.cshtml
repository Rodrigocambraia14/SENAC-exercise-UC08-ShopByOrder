@using ETAPA3.Models
@model UsuarioLogin
@{
    ViewData["Title"] = "Login";
}

<div class="Container">
<form id="borderLogin" method="POST" asp-action="Login">
	<fieldset >
		
        <div class="form group">
          <div class="col-md-6 offset-md-3">
			 <label  asp-for="Login">Login: </label>
			 <input  asp-for="Login" type="text" class="form-control " placeholder="Login ">
          </div>
        </div>
        <div class="form group">
          <div class="col-md-6 offset-md-3">
             <label  asp-for="Senha">Senha: </label>
			 <input  asp-for="Senha" type="password" class="form-control " placeholder="Senha">
          </div>
        </div>      
        <div id="inputLogin" class="form group">
          <div  class="col-md-6 offset-md-3">
    		<input   type="submit" name="Entrar" class="btn btn-primary">
          </div>
          
        </div>                   
    </fieldset>	   
</form>
<div id="viewbag">>
            <p><b>@ViewBag.Mensagem</b></p>
</div>  



